<div class="question__img" data-question-image="true"></div>
<script type="text/template" id="question_img_tmpl">
    <div class="question__img">
        <% if (video !== "") { %>
            <iframe width="420" height="315" class="popup-video__iframe" src="<%= video %>?enablejsapi=1"></iframe>
        <% } else { %>
            <img src=/build/<%= pic %>>
        <% } %>
    </div>
</script>